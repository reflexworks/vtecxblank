{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5", "es6", "dom", "es2021"],
    "jsx": "react"
  },
  "include": ["./src/server/*"]
}
