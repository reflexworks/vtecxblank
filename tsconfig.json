{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "noImplicitReturns": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
//        "module": "commonjs",
        "module": "esnext",
        "target": "es2020",
        "moduleResolution": "bundler",
        "lib": [
            "es2020",
            "es5",
            "es6",
            "dom",
            "DOM.Iterable"
        ],
        "jsx": "react"
    },
    "include": [
        "./src/**/*"
    ]
}
